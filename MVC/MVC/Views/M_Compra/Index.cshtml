@using BibliotecaFarmacia.Clases
@model List<Medicamento>


@{
    ViewData["Title"] = "Módulo de Compras";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Módulo de Compras</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <form class="d-flex gap-2 mb-3" method="get" asp-action="BuscarPorNombre">
        <input name="nombre" class="form-control" placeholder="Buscar por nombre..." />
        <button type="submit" class="btn btn-primary">Buscar</button>
    </form>

    <form class="d-flex gap-2 mb-3" method="get" asp-action="BuscarPorTipo">
        <input name="tipo" class="form-control" placeholder="Buscar por tipo (capsulas, pasta, liquido)..." />
        <button type="submit" class="btn btn-primary">Buscar</button>
    </form>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Nombre</th>
                <th>Tipo</th>
                <th>Laboratorio</th>
                <th>Precio</th>
                <th>Vencimiento</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td>@m.Nom_medicamento</td>
                    <td>@m.Tipo_med</td>
                    <td>@m.Laboratorio</td>
                    <td>@m.Precio_compra</td>
                    <td>@m.Fecha_vencimiento.ToShortDateString()</td>
                    <td class="d-flex gap-2">
                        <form method="post" asp-action="EliminarOpcion">
                            <input type="hidden" name="nombre" value="@m.Nom_medicamento" />
                            <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                        </form>
                        <form method="post" asp-action="ComprarMedicamentos">
                            <input type="hidden" name="nombre" value="@m.Nom_medicamento" />
                            <input type="number" name="cantidad" min="1" placeholder="Cant." class="form-control form-control-sm d-inline w-auto" />
                            <button type="submit" class="btn btn-sm btn-success">Comprar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h4 class="mt-5">Agregar Nuevo Medicamento</h4>
    <form asp-action="AgregarOpcion" method="post" class="row g-3">
        <div class="col-md-4">
            <input type="text" name="tipo" class="form-control" placeholder="Tipo (capsulas, pasta, liquido)" required />
        </div>
        <div class="col-md-4">
            <input type="text" name="nombre" class="form-control" placeholder="Nombre" required />
        </div>
        <div class="col-md-4">
            <input type="text" name="laboratorio" class="form-control" placeholder="Laboratorio" required />
        </div>
        <div class="col-md-4">
            <input type="date" name="fecha_vencimiento" class="form-control" required />
        </div>
        <div class="col-md-4">
            <input type="number" name="precio_compra" class="form-control" placeholder="Precio" required />
        </div>
        <div class="col-md-4">
            <input type="number" name="cantidad" class="form-control" placeholder="Cantidad" required />
        </div>
        <div class="col-md-4">
            <input type="number" name="miligramos" class="form-control" placeholder="Miligramos (si aplica)" />
        </div>
        <div class="col-md-4">
            <input type="number" name="mililitros" class="form-control" placeholder="Mililitros (si aplica)" />
        </div>
        <div class="col-md-4">
            <input type="text" name="relleno" class="form-control" placeholder="Relleno (gel/polvo)" />
        </div>
        <div class="col-md-4">
            <input type="text" name="envase" class="form-control" placeholder="Envase (plastico/vidrio)" />
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-outline-success">Agregar Medicamento</button>
        </div>
    </form>
</div>
