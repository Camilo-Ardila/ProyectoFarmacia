@using BibliotecaFarmacia.Clases
@model List<(Medicamento medicamento, uint cantidad)>

@{
    ViewData["Title"] = "Carrito de Compras";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Carrito de Compras</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">Tu carrito está vacío.</div>
        <a asp-action="Index" class="btn btn-outline-primary">Volver al catálogo</a>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Nombre</th>
                    <th>Tipo</th>
                    <th>Laboratorio</th>
                    <th>Precio Unitario</th>
                    <th>Cantidad</th>
                    <th>Subtotal</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @{
                    decimal total = 0;
                    foreach (var item in Model)
                    {
                        var m = item.medicamento;
                        var cantidad = item.cantidad;
                        var subTotal = m.Precio_compra * cantidad;
                        total += subTotal;
                        <tr>
                            <td>@m.Nom_medicamento</td>
                            <td>@m.Tipo_med</td>
                            <td>@m.Laboratorio</td>
                            <td>$@m.Precio_compra</td>
                            <td>@cantidad</td>
                            <td>$@subTotal</td>
                            <td>
                                <form asp-action="EliminarDelCarrito" method="post">
                                    <input type="hidden" name="nombre" value="@m.Nom_medicamento" />
                                    <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

        <h4 class="text-end">Total: $@total</h4>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-outline-secondary">Seguir Comprando</a>
            <form asp-action="ComprarCarrito" method="post">
                <button type="submit" class="btn btn-success">Finalizar Compra</button>
            </form>
        </div>
    }
</div>
